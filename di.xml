<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Csp\Model\CompositePolicyCollector">
        <plugin name="lotus_remove_unsafe_policies" type="Lotus\CspWhitelist\Plugin\RemoveUnsafePoliciesPlugin" sortOrder="1000"/>
    </type>
    <type name="Magento\Csp\Model\Collector\CspWhitelistXmlCollector">
        <plugin name="lotus_filter_blocked_domains" type="Lotus\CspWhitelist\Plugin\FilterBlockedDomainsPlugin" sortOrder="100"/>
    </type>
    <type name="Magento\Framework\View\TemplateEngine\Php">
        <plugin name="lotus_add_nonce_to_templates" type="Lotus\CspWhitelist\Plugin\AddNonceToTemplatePlugin" sortOrder="100"/>
    </type>
    <type name="Magento\Framework\View\Helper\SecureHtmlRenderer">
        <plugin name="lotus_add_nonce_to_scripts" type="Lotus\CspWhitelist\Plugin\AddNonceToScriptPlugin" sortOrder="100"/>
    </type>
</config>

